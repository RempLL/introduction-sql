<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">
    <changeSet id="student.1" author="im">
        <preConditions>
            <not>
                <tableExists tableName="student"/>
            </not>
        </preConditions>

        <createTable tableName="student">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>

            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="age" type="int">
                <constraints nullable="false"/>
            </column>

            <column name="avatar_url" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>

            <column name="faculty_id" type="BIGINT">
                <constraints nullable="true"/>
            </column>
            
        </createTable>
        
        <addForeignKeyConstraint baseTableName="student" baseColumnNames="faculty_id" constraintName="fk_student_faculty_id" referencedTableName="faculty"
                                 referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>