<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">
    <changeSet id="index.1" author="im">
        <preConditions>
            <and>
                <tableExists tableName="faculty"/>
                <not>
                    <indexExists tableName="faculty" indexName="idx_faculty_name"/>
                </not>
            </and>
        </preConditions>

        <createIndex tableName="faculty" indexName="idx_faculty_name" unique="true">
            <column name="name"/>
            <column name="color"/>
        </createIndex>

    </changeSet>

</databaseChangeLog>